{
    "openapi": "3.0.0",
    "info": {
        "description": "This is the docs of [orvide.com](http://orvide.com)",
        "version": "1.0.0",
        "title": "Orvide: The Virtual Org!",
        "termsOfService": "http://localhost:4000/termsOfService",
        "contact": {
            "email": "contact@orvide.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "host": "localhost:4000",
    "basePath": "/api",
    "tags": [
        {
            "name": "auth",
            "description": "Authentication Route"
        },
        {
            "name": "meta",
            "description": "Fetch meta details"
        }
    ],
    "schemes": [
        "http"
    ],
    "paths": {
        "/auth/verifyEmail": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Verify the Email",
                "description": "Send a verification link to the provided email!",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Enter a valid email address",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "password",
                        "in": "path",
                        "description": "Enter a password",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "confirm password",
                        "in": "path",
                        "description": "Confirm your password",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Verification Mail sent at {$email}"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Register the complete user",
                "description": "Register the firstName, lastName, username, and email address along with the verification OTP",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Enter a valid email address",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "username",
                        "in": "path",
                        "description": "Enter the chosen username",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "otp",
                        "in": "path",
                        "description": "The verification OTP",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "First Name",
                        "in": "path",
                        "description": "The first Name",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "Last Name",
                        "in": "path",
                        "description": "The Last Name",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User Registered Successfully"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                }
            }
        },
        "/meta/uname_unique": {
            "post": {
                "tags": [
                    "meta"
                ],
                "summary": "fetch to find if it is unique username",
                "description": "Check if the supplied username is unique or not",
                "consumes": [
                    "application/json",
                    "application/xml"
                ],
                "produces": [
                    "application/json",
                    "application/xml"
                ],
                "parameters": [
                    {
                        "name": "uname",
                        "in": "path",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Verification Mail sent at {$email}"
                    },
                    "400": {
                        "description": "Error: Bad Request"
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "api_key",
            "in": "header"
        }
    }
}