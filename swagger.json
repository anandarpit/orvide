    "host": "localhost:4000",
    "basePath": "/api",
    "tags": [
        {
            "name": "auth",
            "description": "Authentication Route"
        }
    ],
    "schemes": [
        "https",
        "http"
    ],
    "paths": {
        "/auth/verifyEmail": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Verify the Email",
                "description": "Send a verification link to the provided email!",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "email",
                        "in": "path",
                        "description": "Enter a valid email address",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    },
                    "400": {
                        "description": "failed"
                    }
                },
                "security": [
                    {
                        "api_key": []
                    }
                ]
            }
        }
    },
    "securityDefinitions": {
        "api_key": {
            "type": "apiKey",
            "name": "api_key",
            "in": "header"
        }
    }
}